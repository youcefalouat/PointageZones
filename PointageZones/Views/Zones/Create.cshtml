@model PointageZones.Models.Zone

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>Zone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Zones" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RefZone" class="control-label"></label>
                <input asp-for="RefZone" class="form-control" />
                <span asp-validation-for="RefZone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option disabled selected value=""> -- selectionner un type -- </option>
                    <option value="Exterieur">Exterieur</option>
                    <option value="Interieur">Interieur</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Zones" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
